<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Quantitytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textSize="20sp"
        />



    <Button android:layout_below="@+id/Quantitytextview"
        android:id="@+id/Addbuttonview"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:onClick="plusclick"
        />
    <TextView
        android:id="@+id/Amounttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/Addbuttonview"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        />
    <Button android:layout_below="@+id/Amounttextview"
        android:id="@+id/Minusbuttonview"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:onClick="minusclick"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Pricetextview"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/Minusbuttonview"
    android:text="price"
    android:textAllCaps="true"
    android:textSize="20sp"
    android:layout_marginBottom="5dp"
    />
    <TextView
        android:id="@+id/pamounttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:layout_below="@+id/Pricetextview"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Orderbuttonview"
        android:layout_below="@id/pamounttextview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="order"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:onClick="orderclick"/>
</RelativeLayout>
